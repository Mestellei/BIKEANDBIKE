
<div class="bike-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1552549678-1a380a5a428b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60);">

  <div class="mt-4">
    <div class="row">
      <div class="add-container col-8 m-auto">

        <div class="flat-form">

          <h1>Add a new Bike</h1>
          <div class="mt-3">
            <%= simple_form_for(@bike) do |f| %>
                <%= f.input :name, class: 'form-control form-height' %>
                <%= f.input :address, class: 'form-control form-height' %>
                <%= f.input :category, as: :radio_buttons, collection: ["Family", "Single"] %>
                <%= f.input :price_per_day, placeholder: '€ Price Per Day' %>

               <!--  <%= f.label "€ Price Per Day", class: "form-label pr-3 pt-3" %> -->

                <%= f.submit class: 'btn-create-a-bike' %>
                <%= link_to 'Cancel', bikes_path, class: 'btn-cancel' %>

            <% end %>
          </div>
        </div>

      </div>
    </div>
  </div>

</div>

<div class="container mt-4">
    <div class="row">
      <div class="col-6 m-auto">
        <div class="bike-form">
          <h1>Add a new bike</h1>
          <div class="mt-3">
            <%= form_for(@bike) do |f| %>

              <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :brand %>
                <%= f.text_field :brand, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :category %>
                <%= f.text_field :category, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :address %>
                <%= f.text_field :address, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :price_per_day %>
                <%= f.number_field :price_per_day, class: 'form-control' %>
              </div>

              <div class="mt-3">
                <%= f.submit class: 'btn btn-primary' %>
                <%= link_to 'Cancel', '#', class: 'btn btn-danger ml-2' %>
              </div>

            <% end %>
          </div>
        </div>
      </div>
    </div>
</div>


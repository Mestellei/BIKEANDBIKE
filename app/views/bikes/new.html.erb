
<div class="bike-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1552549678-1a380a5a428b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60);">

  <div class="mt-4">
    <div class="row">
      <div class="container  m-auto">

        <div class="flat-form col-4">

          <h1>Add a new Bike</h1>
          <div class="mt-3">
            <%= simple_form_for(@bike)  do |f| %>
                <%= f.input :name, class: 'form-control form-height', placeholder: "Name", label: "", abbr: "" %>
                <%= f.input :address, class: 'form-control form-height', placeholder: "Address", label: "" %>
                <%= f.input :category, as: :radio_buttons, collection: ["Family", "Single"] %>
                <%= f.input :price_per_day, placeholder: 'â‚¬ Price Per Day', label: "" %>
                <%= f.input :picture %>
                <%= f.input :picture_cache, as: :hidden %>
                <%= f.submit class: 'btn btn-outline-primary' %>
                <%= link_to 'Cancel', bikes_path, class: 'btn btn-outline-danger' %>

            <% end %>
          </div>
        </div>

      </div>
    </div>
  </div>

</div>

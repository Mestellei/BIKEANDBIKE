<body style="background-image: url(https://images.unsplash.com/photo-1416103292956-1f6aff3d93fb?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80);">

  <div class = "title"><h2>Bike bookings history</h2></div>

  <div class="table-responsive-sm">
    <table class="table table-hover">
      <thead>
        <tr>

          <th scope="col">Bike name</th>
          <th scope="col">Start date</th>
          <th scope="col">End date</th>
          <th scope="col">Total Price â‚¬</th>
          <th scope="col">Status</th>

          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
          <th scope="col">Add a review</th>

        </tr>
      </thead>

      <tbody>

        <% @bookings.each do |booking| %>
          <tr>
            <td><%= booking.bike.name %></td>
            <td><%= booking.begining_date.strftime("%B #{booking.begining_date.day.ordinalize}, %Y") %></td>
            <td><%= booking.end_date.strftime("%B #{booking.end_date.day.ordinalize}, %Y")  %></td>
            <td><%= booking.total_price%></td>
            <td><%= booking.status%></td>
            <td><%= link_to "Edit", edit_booking_path(booking), class: "btn btn-warning" %></td>
            <td><%= link_to "Delete", booking_path(booking), method: :delete, class: "btn btn-danger" %></td>
            <td><%= link_to "Add a review",  new_booking_review_path(booking), class: "btn btn-primary" %></td>
          </tr>
        <% end %>


<h1>Bikes#show</h1>
<p>Find me in app/views/bikes/show.html.erb</p>

<div class=background-image style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('https://images.unsplash.com/photo-1438183972690-6d4658e3290e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=967&q=80', height: 300, width: 400, crop: :fill %>')">>
  <div class="container margin-top-negative">
    <div class="row">
      <div class="col-8 test_me">
        <div class="bike-show-card">
          <h1><%= @bike.name %></h1>
          <p class="bike-show-address"><%= @bike.address %></p>
        </div>
        <div class="bike-show-card">
          <h3>Brand</h3>
          <p><%= @bike %></p>
          <div class="map" style="background-image: url('https://maps.googleapis.com/maps/api/staticmap?center=<%= @bike.address %>&zoom=13&scale=2&size=1000x1000&maptype=roadmap&markers=color:red%7C<%= @bike.address %>&key=AIzaSyBtaHK-BLhBg7TruJu8iKk_wETqZMJM-GY')"></div>
        </div>
      </div>

      <div class="col-4 test_me">
        <div class="bike-show-card">
          <h5>Book this bike!</h5>

          <form action="">
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon1">From:</span>
              <input type="text" class="form-control" placeholder="12/10/2017" aria-label="Username" aria-describedby="basic-addon1">
            </div>
            <div class="input-group mt-2">
              <span class="input-group-addon" id="basic-addon1">To:</span>
              <input type="text" class="form-control" placeholder="18/10/2017" aria-label="Username" aria-describedby="basic-addon1">
            </div>
            <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
          </form>
        </div>
        <div class="bike-show-card">
          <h3>Category</h3>
          <div class="flex">
            <div class="flex">
              <i class="material-icons mr-2">people</i><span><%= @bike %></span>
            </div>
            <div class="flex ml-3">
              <i class="material-icons mr-2">euro_symbol</i> <%= @bike.price_per_day %>
            </div>
          </div>
        </div>
        <div class="bike-show-card">
          <div class="flex-align">
            <h6 class="no-mb">Share</h6>

            <div class="flex">
              <i class="fa fa-facebook-square fa-2x mr-2"></i>
              <i class="fa fa-twitter-square fa-2x mr-2"></i>
              <i class="fa fa-pinterest-square fa-2x mr-2"></i>
              <i class="fa fa-envelope-square fa-2x"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
